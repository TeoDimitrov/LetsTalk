<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonsSessions"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/sessionsToolbar"
        android:background="@drawable/sessions_shadow">
        <Button
            android:id="@+id/buttonChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/session_buttons_margin"
            android:background="@drawable/button_selector"
            android:text="@string/chat"
            android:textSize="@dimen/session_buttons_text_size"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/buttonTalk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/session_buttons_margin"
            android:background="@drawable/button_selector"
            android:text="@string/talk"
            android:textSize="@dimen/session_buttons_text_size"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonsSessions"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>